{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "groupName": "mono-repo packages",
            "matchFileNames": [
                "/packages/**/*"
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "description": "Update static variables in pkl files",
            "managerFilePatterns": [
                "/\\.pkl$/"
            ],
            "matchStrings": [
                "\\/\\/ renovate: datasource=(?<datasource>[a-z-]+?)(?: registryUrl=(?<registryUrl>.+?))?(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?= ?\"(?<currentValue>.+?)\"\\s"
            ]
        },
        {
            "customType": "regex",
            "description": "Update _VERSION variables in Dockerfiles",
            "managerFilePatterns": [
                "/(^|/|\\.)Dockerfile$/",
                "/(^|/)Dockerfile\\.[^/]*$/"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:ENV|ARG|env|arg) .+?_VERSION=(?<currentValue>.+?)\\s"
            ]
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/(^|/)PklProject$/",
                "/\\.pkl$/"
            ],
            "matchStrings": [
                "\"package:\/\/(?<registryUrl>.*)\/(?<depName>.*?)@(?<currentValue>.*?)(#.*)?\""
            ],
            "registryUrlTemplate": "https://github.com/",
            "packageNameTemplate": "{{#if (equals registryUrl 'pkl-pkgs.lucsoft.de/packages')}}lucsoft/cluster{{else}}{{{replace 'pkg\\.pkl-lang\\.org' 'apple' registryUrl}}}{{/if}}",
            "datasourceTemplate": "{{#if (equals registryUrl 'pkl-pkgs.lucsoft.de/packages')}}github-tags{{else}}github-releases{{/if}}",
            "extractVersionTemplate": "{{#if (equals registryUrl 'pkl-pkgs.lucsoft.de/packages')}}(?<version>.*){{else}}{{depName}}@(?<version>.*){{/if}}"
        }
    ]
}