amends "@ArgoCD/App.pkl"

name = "satisfactory"
namespace = "argocd"
autoSync = false

source {
  repoURL = "https://github.com/lucsoft/cluster"
  targetRevision = "main"
  path = "personal-cluster"
  plugin {
    parameters {
      new {
        name = "path"
        string = "components/Satisfactory.pkl"
      }
    }
  }
}

application {
  metadata {
    annotations {
      ["argocd.argoproj.io/compare-options"] = "ServerSideDiff=false"
    }
  }
}
