amends "package://pkg.pkl-lang.org/pkl-pantry/k8s.contrib.crd@1.0.13#/generate.pkl"
import "pkl:yaml"

import "@k8s/api/apps/v1/Deployment.pkl"
import "@k8s/api/core/v1/PodSpec.pkl"
import "@k8s/api/core/v1/Service.pkl"

import "./_common.pkl"

local version = "knative-v1.21.0"
local baseUrl = "https://raw.githubusercontent.com/knative/operator/\(version)/config/crd"
// noinspection UnresolvedElement
local kustomize: Listing<String> =
  new yaml.Parser {}.parse(read("\(baseUrl)/kustomization.yaml")).resources

source = ""

k8sImportPath = "@k8s"

sourceContents =
  new YamlRenderer {
    isStream = true
  }.renderDocument(
    kustomize
      .toList()
      .map((item) -> (new yaml.Parser {}.parse(read("\(baseUrl)/\(item)")) as Dynamic)),
  )

converters {
  ["knativeservings.operator.knative.dev"] {
    [List("spec", "deployments")] = _common.Deployments
    [List("spec", "services")] = _common.Services
  }
}
